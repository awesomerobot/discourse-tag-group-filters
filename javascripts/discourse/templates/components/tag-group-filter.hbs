{{#if boxGroups}}
  <div class="custom-box-groups">
    {{#each boxGroups as |group|}}
      <div class="custom-box-group">
        <h4>{{group.name}}</h4>

        <ul>
          {{box-tag tag=(hash name="all") activeTag=this.tag category=category}}

          {{#each group.tags as |tag|}}
            {{box-tag tag=tag activeTag=this.tag category=category}}
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if dropdownGroups}}
  <div class="custom-dropdown-groups">
    {{#each dropdownGroups as |group|}}
      <div class="custom-dropdown-group">
        <h4>{{group.name}}</h4>

        {{tag-selector
          allowedTags=group.tags
          currentCategory=category
          tag=tag
        }}
      </div>
    {{/each}}
  </div>
{{/if}}
